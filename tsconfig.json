{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "./javascripts/discourse/",
        "rootDir": "./src",
        "declaration": false,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "javascripts"
    ]
}